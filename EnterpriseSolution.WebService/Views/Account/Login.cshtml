@{
    ViewBag.Title = "APPAREL ERP SUITE";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row panel-center" ng-controller="LoginCtrl">
    <div flash-message="10000"></div>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
        <div class="well no-padding ">
            <form id="login-form" class="smart-form client-form" ng-submit="login()">
                <header>
                    Sign In
                </header>

                <fieldset>
                    <section>
                        <label class="label">E-mail</label>
                        <label class="input">
                            <i class="icon-append fa fa-user"></i>
                            <input type="email" name="email" ng-model="UserName" ng-required=true>
                            <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter email address/username</b>
                        </label>
                    </section>

                    <section>
                        <label class="label">Password</label>
                        <label class="input">
                            <i class="icon-append fa fa-lock"></i>
                            <input type="password" name="password" ng-model="Password" ng-required=true>
                            <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Enter your password</b>
                        </label>
                        <div class="note">
                            <a href="forgotpassword.html">Forgot password?</a>
                        </div>
                    </section>

                    <section>
                        <label class="checkbox">
                            <input type="checkbox" name="remember" checked="">
                            <i></i>Stay signed in
                        </label>
                    </section>
                </fieldset>
                <footer>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-sign-in"></i> Sign in
                    </button>
                </footer>
            </form>
        </div>

