@model dynamic

@{
    Layout = null;
}

<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <h1 class="page-title txt-color-blueDark">
        <i class="fa-fw fa fa-home"></i> Home
        <span><i class="fa fa-angle-right"></i>&nbsp;Branches</span>
    </h1>
</div>
<!-- NEW WIDGET START -->
<div class="row">
    <article class="col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">

        <!-- Widget ID (each widget will need unique ID)-->
        <div class="jarviswidget jarviswidget-sortable" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
            <header role="heading" class="ui-sortable-handle">
                <div class="jarviswidget-ctrls" role="menu"><a href="javascript:void(0);" class="button-icon jarviswidget-fullscreen-btn" rel="tooltip" title="" data-placement="bottom" data-original-title="Fullscreen"><i class="fa fa-expand "></i></a></div>
                <span class="widget-icon"> <i class="fa fa-tree"></i> </span>
                <h2>Branches</h2>
            </header>

            <!-- widget div-->
            <div class="content">
                <!-- widget content -->
                <div class="widget-body-toolbar">
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#AddNewBranch">
                                <i class="fa fa-plus"> &nbsp; Add New Branch</i>
                            </button>
                        </div>
                        <!-- Trigger the modal with a button -->
                    </div>
                </div>

                <table datatable="ng" id="dt_basic" class="responsive-table table table-responsive table-striped table-bordered table-hover width-100">
                    <thead>
                        <tr>
                            @*<td>Branch Code</td>*@
                            <td class="dt-width-1000">Branch Name</td>
                            <td class="dt-width-1000">Address</td>
                            <td class="dt-width-1000">City</td>
                            <td class="dt-width-1000">IsActive</td>
                            <td class="text-center dt-width-1000">Actions</td>
                        </tr>
                    </thead>

                    <tbody>
                        <tr ng-repeat="row in listOfBranch">
                            @*<td>{{row.Code}}</td>*@
                            <td>{{row.Name}}</td>
                            <td>{{row.Address}}</td>
                            <td>{{row.City}}</td>
                            <td class="text-center">
                                <i ng-show="row.IsActive== true" class="fa fa-check green"></i>
                                <i class="fa fa-remove red" ng-show="row.IsActive == false"></i>
                            </td>
                            <td class="text-center">
                                <a class="btn btn-primary btn-xs" ng-click="OpenEditBranchModal(row.Id)" data-toggle="modal" data-target="#EditBranch" role="button"><i class="fa fa-pencil"></i>&nbsp;Edit</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="form-actions"></div>
                <!-- end widget content -->
            </div>
            <!-- end widget div -->
        </div>
        <!-- end widget -->
    </article>
</div>
<!-- Add new Branch Modal -->
<div class="modal fade" id="AddNewBranch" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" dragable>
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel"><i class="fa fa-windows"></i>&nbsp;Add New User</h4>
            </div>
            <form class="form-horizontal simple-form" name="formSave" ng-submit="saveBranch(branchInfo)" novalidate>
                <div class="modal-body">
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Branch Code&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-disabled="true" ng-model="branchInfo.Code" type="text" />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Branch Name&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="branchInfo.Name" type="text" required />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Branch Address&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="branchInfo.Address" type="text" required />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">City&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="branchInfo.City" type="text" required />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Is Active?</label>
                                            <div class="col-md-2">
                                                <div class="checkbox">
                                                    <label>
                                                        <input ng-model="branchInfo.IsActive" type="checkbox">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" ng-disabled="!formSave.$valid">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Branch Modal -->
<div class="modal fade" id="EditBranch" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" draggable>
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel"><i class="fa fa-pencil"></i>&nbsp;Edit Branch</h4>
            </div>
            <form class="form-horizontal simple-form" name="formEdit" ng-submit="UpdateBranch(branchDetiles)" novalidate>
                <div class="modal-body">
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Branch Code&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-disabled="true" ng-model="branchDetiles.Code" type="text" />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Branch Name&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="branchDetiles.Name" type="text" required />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Branch Address&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="branchDetiles.Address" type="text" required />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">City&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="branchDetiles.City" type="text" required />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Is Active?</label>
                                            <div class="col-md-2">
                                                <div class="checkbox">
                                                    <label>
                                                        <input ng-model="branchDetiles.IsActive" type="checkbox">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" ng-disabled="!formEdit.$valid">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

