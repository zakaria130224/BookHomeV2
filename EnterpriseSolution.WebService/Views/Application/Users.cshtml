@model dynamic

@{
    Layout = null;
}

<div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
    <h1 class="page-title txt-color-blueDark">
        <i class="fa-fw fa fa-home"></i> Home
        <span><i class="fa fa-angle-right"></i>&nbsp;Users</span>
    </h1>
</div>
<!-- NEW WIDGET START -->
<div class="row">
    <article class="col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">

        <!-- Widget ID (each widget will need unique ID)-->
        <div class="jarviswidget jarviswidget-sortable" id="wid-id-0" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-custombutton="false">
            <header role="heading" class="ui-sortable-handle">
                <div class="jarviswidget-ctrls" role="menu"><a href="javascript:void(0);" class="button-icon jarviswidget-fullscreen-btn" rel="tooltip" title="" data-placement="bottom" data-original-title="Fullscreen"><i class="fa fa-expand "></i></a></div>
                <span class="widget-icon"> <i class="fa fa-tree"></i> </span>
                <h2>Users</h2>
            </header>

            <!-- widget div-->
            <div class="content">
                <!-- widget content -->
                <div class="widget-body-toolbar">
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#AddNewUser">
                                <i class="fa fa-plus"> &nbsp; Add New User</i>
                            </button>
                        </div>
                        <!-- Trigger the modal with a button -->
                    </div>
                </div>

                <table datatable="ng" id="dt_basic" class="responsive-table table table-responsive table-striped table-bordered table-hover width-100">
                    <thead>
                        <tr>
                            <td class="dt-width-300">First Name</td>
                            <td class="dt-width-300">Last Name</td>
                            <td class="dt-width-300">Mobile No.</td>
                            <td class="dt-width-300">Email</td>
                            <td class="dt-width-300">Role</td>
                            <td class="dt-width-300">User Name</td>
                            <td class="dt-width-300">User PIN</td>
                            <td class="text-center">Status</td>
                            <td class="text-center">Actions</td>
                        </tr>
                    </thead>

                    <tbody>
                        <tr ng-repeat="row in listOfUserDetails">
                            <td>{{row.FirstName}}</td>
                            <td>{{row.LastName}}</td>
                            <td>{{row.MobileNo}}</td>
                            <td>{{row.Email}}</td>
                            <td>{{row.RoleName}}</td>
                            <td>{{row.UserName}}</td>
                            <td>{{row.UserPin}}</td>
                            <td class="text-center">
                                <i ng-show="row.IsActive== true" class="fa fa-check green"></i>
                                <i class="fa fa-remove red" ng-show="row.IsActive == false"></i>
                            </td>
                            <td class="text-center">
                                <a data-toggle="modal" data-target="#EditUser" ng-click="OpenEditUserModal(row.UserId)" class="btn btn-primary btn-xs" role="button"><i class="fa fa-pencil"></i>&nbsp;Edit</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="form-actions"></div>
                <!-- end widget content -->
            </div>
            <!-- end widget div -->
        </div>
        <!-- end widget -->
    </article>
</div>
<!-- Add Modal -->
<div class="modal fade" id="AddNewUser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" dragable>
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel"><i class="fa fa-plus"></i>&nbsp;Add New User</h4>
            </div>
            <form class="form-horizontal simple-form" name="frmAddNewUser" ng-submit="saveUser(user)" novalidate>
                <div class="modal-body">
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">First Name&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="user.FirstName" type="text" required />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Last Name&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="user.LastName" type="text" required />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">MobileNo&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="user.MobileNo" type="text" required />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Email Address&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="user.Email" type="email" required />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">User Role&nbsp;</label>
                                            <div class="col-md-9">
                                                <select ui-select2 class="form-control" ng-model="user.RoleId" ng-options="x.Id as x.UserRole for x in roleList|orderBy:'UserRole'" required></select>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Select Branch&nbsp;</label>
                                            <div class="col-md-9">
                                                <select ui-select2 class="form-control"
                                                        ng-model="user.BranchId" ng-options="x.Id as x.Name for x in branchlist|orderBy:'Name'" required></select>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">User Name&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="user.UserName" type="text" required />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Is Active?</label>
                                            <div class="col-md-2">
                                                <div class="checkbox">
                                                    <label>
                                                        <input ng-model="user.IsActive" type="checkbox">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" ng-disabled="!frmAddNewUser.$valid">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="EditUser" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" dragable>
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel"><i class="fa fa-pencil"></i>&nbsp;Edit User Detalis</h4>
            </div>
            <form class="form-horizontal simple-form" name="frmEditUser" ng-submit="UpdateUser(userDetails)" novalidate>
                <div class="modal-body">
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">User Id&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-disabled="true" ng-model="userDetails.UserId" type="text" required />
                                            </div>
                                        </div>
                                    </fieldset>

                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">First Name&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="userDetails.FirstName" type="text" required />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Last Name&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="userDetails.LastName" type="text" required />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">MobileNo&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="userDetails.MobileNo" type="text" required />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Email Address&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="userDetails.Email" type="text" required />
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">User Role&nbsp;</label>
                                            <div class="col-md-9">
                                                <select ui-select2 class="form-control" ng-model="userDetails.RoleId" ng-options="x.Id as x.UserRole for x in roleList|orderBy:'UserRole'" required></select>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Select Branch&nbsp;</label>
                                            <div class="col-md-9">
                                                <select ui-select2 class="form-control" ng-model="userDetails.BranchId" ng-options="x.Id as x.Name for x in branchlist|orderBy:'Name'" required></select>
                                            </div>
                                        </div>
                                    </fieldset>
                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">User Name&nbsp;</label>
                                            <div class="col-md-9">
                                                <input class="form-control" ng-model="userDetails.UserName" type="text" disabled />
                                            </div>
                                        </div>
                                    </fieldset>

                                    <fieldset>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Is Active?</label>
                                            <div class="col-md-2">
                                                <div class="checkbox">
                                                    <label>
                                                        <input ng-model="userDetails.IsActive" type="checkbox">
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" ng-disabled="!frmEditUser.$valid">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

