<!-- Modal starts -->
<div class="modal fade" id="{{uniqueId}}">
    <div class="modal-dialog">
        <div class="modal-content" dragable>
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">{{modalTitle}}</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="comment">{{modalLabel}}</label>
                    <textarea class="form-control" rows="5" id="comment" ng-model="modalData"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    <i class="fa fa-times" aria-hidden="true"></i>
                    Close
                </button>
                <button type="button" class="{{submitButtonStyle}}" ng-click="NotifyParent()">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    {{submitButtonName}}
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Modal ends -->
