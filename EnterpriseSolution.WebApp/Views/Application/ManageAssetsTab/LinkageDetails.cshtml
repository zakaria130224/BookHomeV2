            </div>

            <div class="modal-body">
                <div>
                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->
                    </div>
                    <!-- end widget edit box -->
                    <!-- widget content -->
                    <div class="widget-body">
                        <form class="form-horizontal">
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Expense Processing</label>
                                    <div class="col-md-9">
                                        <input class="form-control" placeholder="Expense Processing" type="text">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 control-label">Contract Amount</label>
                                    <div class="col-md-9">
                                        <input class="form-control" placeholder="Contract Amount" type="text">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-3 control-label">Linked Amount</label>
                                    <div class="col-md-9">
                                        <input class="form-control" placeholder="Linked Amount" type="text">
                                    </div>
                                </div>


                            </fieldset>
                        </form>
                    </div>
                    <!-- end widget content -->
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>

        </div>
    </div>
</div>