<form class="form-horizontal">

    <fieldset>
        <div class="form-group">
            <label class="col-md-2 control-label">Reference Number</label>
            <div class="col-md-3">
                <input class="form-control" disabled="disabled" placeholder="00000FXERAOA" type="text">
            </div>
       
            <label class="col-md-2 control-label">Event Number</label>
            <div class="col-md-3">
                <input class="form-control" disabled="disabled" placeholder="00000FXERAOA" type="text">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label"></label>
            <div class="col-md-3">
                <input type="checkbox"/>
                <span> See Position Entries </span>
            </div>
        
            <label class="col-md-2 control-label">Event</label>
            <div class="col-md-3">
                <input class="form-control" disabled="disabled" placeholder="CAPT" type="text">
            </div>
        </div>




    </fieldset>

    <fieldset>
        <article class="col-sm-12 col-md-12 col-lg-12">
            <!-- Widget ID (each widget will need unique ID)-->
            <div class="jarviswidget" id="wid-id-2" data-widget-colorbutton="false" data-widget-editbutton="false">
                
                <!-- widget div-->
                <div>

                    <!-- widget edit box -->
                    <div class="jarviswidget-editbox">
                        <!-- This area used as dropdown edit box -->
                    </div>
                    <!-- end widget edit box -->
                    <!-- widget content -->
                    <div class="widget-body fuelux">
                        <div class="widget-body-toolbar">
                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- Button trigger modal -->
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addAccountDetails">
                                        <i class="fa fa-plus"> &nbsp; Add Events</i>
                                    </button>
                                </div>
                                <!-- Trigger the modal with a button -->
                            </div>
                        </div>
                        <table datatable="ng" id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                            <thead>
                            <tr>
                                <th>Event </th>
                                <th>Branch</th>
                                <th>Account</th>
                                <th>Account Description</th>
                                <th>DrCr</th>
                                <th>Amount Tag</th>
                                <th>Amount Ccy</th>
                                <th>Foreign Currency Amount</th>
                                <th>Rate</th>
                                <th>Local Currency Amount</th>
                                <th>Date</th>
                                <th>Value Date </th>
                                <th>Txn Code </th>
                                <th class="text-center">Action </th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr ng-repeat="accountEntries in AccountEntriesList">
                                <td>{{accountEntries.Event}}</td>
                                <td>{{accountEntries.Branch}}</td>
                                <td>{{accountEntries.Account}}</td>
                                <td>{{accountEntries.AccountDescription}}</td>
                                <td>{{accountEntries.DrCr}}</td>
                                <td>{{accountEntries.AmountTag}}</td>
                                <td>{{accountEntries.AmountCcy}}</td>
                                <td>{{accountEntries.ForeignCurrencyAmount }}</td>
                                <td>{{accountEntries.Rate }}</td>
                                <td>{{accountEntries.LocalCurrencyAmount }}</td>
                                <td>{{accountEntries.ValueDate }}</td>
                                <td>{{accountEntries.Date }}</td>
                                <td>{{accountEntries.TxnCode }}</td>
                                <td>
                                    <a data-toggle="modal" data-target="#editEvent">
                                        <i class="fa fa-pencil-square"></i>&nbsp;Edit
                                    </a>
                                    <a><i class="fa fa-minus-square"></i>&nbsp;Delete</a>
                                </td>
                            </tr>
                            </tbody>
                        </table>

                        <div saving-process> </div>
                    </div>
                    <!-- end widget content -->

                </div>
                <!-- end widget div -->

            </div>
            <!-- end widget -->

        </article>
        <!-- WIDGET END -->
    </fieldset>

</form>




